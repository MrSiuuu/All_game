{% block body %}
<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <div class="w-full max-w-md p-8 space-y-8 bg-gray-800 rounded-xl shadow-lg border border-gray-700">
        <div class="flex flex-col items-center mb-6">
            <img src="{{ asset('images/logo-all-games.svg') }}" alt="AllGames" class="w-24 mb-2">
            <h2 class="text-2xl font-bold text-white mb-2">Connexion à AllGames</h2>
            <p class="text-gray-400 text-sm">Bienvenue ! Connecte-toi pour accéder à ton espace.</p>
        </div>
        {% if app.user %}
            <div class="text-white text-lg font-medium title-font mb-5 text-center">Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a class="text-blue-400 hover:underline" href="{{ path('app_logout') }}">Logout</a></div>
        {% else %}
        <form method="post" class="space-y-6">
            {% if error %}
                <div class="p-4 mb-4 text-sm text-red-400 rounded-lg bg-gray-900 border border-red-500 text-center" role="alert">
                    <span class="font-medium flex items-center justify-center"><svg class="w-5 h-5 mr-2 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12A9 9 0 11 3 12a9 9 0 0118 0z"/></svg>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}
            <div>
                <label for="username" class="block text-sm font-medium text-gray-300 mb-1">Adresse email</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 12A4 4 0 118 12a4 4 0 018 0z"/></svg>
                    </span>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="w-full pl-10 pr-3 py-2 bg-gray-700 border border-gray-600 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-100" autocomplete="username" required autofocus placeholder="Votre email">
                </div>
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-300 mb-1">Mot de passe</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 11c0-1.657 1.343-3 3-3s3 1.343 3 3-1.343 3-3 3-3-1.343-3-3z"/></svg>
                    </span>
                    <input type="password" name="_password" id="password" class="w-full pl-10 pr-3 py-2 bg-gray-700 border border-gray-600 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-100" autocomplete="current-password" required placeholder="Votre mot de passe">
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded shadow transition">Se connecter</button>
        </form>
        {% endif %}
    </div>
</section>
{% endblock %}