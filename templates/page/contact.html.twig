{% extends 'base.html.twig' %}

{% block title %}Contact - AllGames{% endblock %}

{% block body %}
<section class="container mx-auto px-5 py-24">
    <div class="bg-gray-800 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
        <h2 class="text-white text-lg font-medium title-font mb-5">Contact</h2>
        <form action="#" method="post">
            <div class="mb-4">
                <label for="name" class="leading-7 text-sm text-gray-400">Nom</label>
                <input type="text" id="name" name="name" class="w-full bg-gray-700 rounded border border-gray-600 focus:border-blue-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="mb-4">
                <label for="email" class="leading-7 text-sm text-gray-400">Email</label>
                <input type="email" id="email" name="email" class="w-full bg-gray-700 rounded border border-gray-600 focus:border-blue-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="mb-4">
                <label for="message" class="leading-7 text-sm text-gray-400">Message</label>
                <textarea id="message" name="message" class="w-full bg-gray-700 rounded border border-gray-600 focus:border-blue-500 h-32 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
            </div>
            <button type="submit" class="text-white bg-blue-500 border-0 py-2 px-8 focus:outline-none hover:bg-blue-600 rounded text-lg">Envoyer</button>
        </form>
    </div>
</section>
{% endblock %} 